<ul>
  {{#each toolbar~}}
  {{#if this}}
  <li 
    class="{{#if submenu}}has-submenu{{/if}} {{#if cls}}{{ cls }}{{/if}} {{#if right}}pull-right{{/if}}"
    {{#if event}} data-event="{{ event }}"{{/if}}
    {{#if eventData}} data-event-data="{{ json eventData }}"{{/if}}
      >
    <a>
      <strong>{{ title }}</strong>
    </a>
    {{#if submenu~}}
      <ul>
        {{#each submenu~}}
        {{#if this}}
        <li class="{{#if divider}}divider{{/if}} {{#if cls}}{{ cls }}{{/if}}"
            {{#if event}} data-event="{{ event }}"{{/if}}
            {{#if eventData}} data-event-data="{{ json eventData }}"{{/if}}>
          {{~#unless divider~}}
            <a>{{ title }}
              {{#if subtitle}}
              <div class="subtitle">{{ subtitle }}</div>
              {{/if}}
            </a>
            {{~#if options}}
            {{#if options.fileSelector}}
            <input type="file" title="">
            {{/if}}
            {{/if}}
          {{~/unless~}}
        </li>
        {{~/if~}}
        {{~/each}}
      </ul>
    {{~/if~}}
  </li>
  {{/if}}
  {{~/each}}
</ul>
